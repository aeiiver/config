{
  "layer": "top",
  "position": "top",
  //"height": 32,
  //"width": 1920,
  "spacing": 0,
  "modules-left": ["disk", "cpu", "memory", "idle_inhibitor"],
  "modules-center": ["wlr/workspaces"],
  "modules-right": ["tray", "pulseaudio", "battery", "clock"],
